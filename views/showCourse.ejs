<%- include("partials/header.ejs") %>

    <div class="container mt-5">
        <div class="row">
            <!-- course name and score -->
            <div class="col-md-5 col-12">
              <div>
                  <h1>Course: <%= course.code%></h1>
                  <h3><%= course.name%></h3>
                  <h3>Score: <%= course.scoure%></h3>
                  <h5>Description:</h5>
                  <p><%= course.description%></p>
                  <p>BR: <%= course.br_category%></p>
                  <p>Is Offered Now? <%= course.is_offered_now%></p>
                  <p>Monthly viewed: <%= course.monthly_visit%></p>


              </div>
            </div>
            <div class="col-md-7 col-12">
              <img class="img-fluid" src="<%= course.word_cloud %>">
            </div>
        </div>
        <hr>

        <!-- Review list -->
        <div class="column mt-5">
          <% for(var comment of course.reddit_comments){ %>
            
              <div class="row">
                <div class="card-body">
                  <p class="card-text"><%= comment.content %></p>
                  <a class="button-secondary" href="<%= comment.url %>">Original Thread</a>
                  <!-- <p> Not relevent comments? Let us know!</p> -->
                  <button type="button" class="btn btn-primary btn-sm ">relevant👍<%= comment.relevant_score %></button>
                  <button type="button" class="btn btn-secondary btn-sm ">not relevant👎<%= comment.nonrelevant_score %></button>
                  <button type="button" class="btn btn-warning btn-sm ">funny😆<%= comment.funny_score %></button>
                  <hr>
                </div>
              </div>
            <% } %>
      

        </div>
    </div>

<%- include("partials/footer.ejs") %>
      

  



