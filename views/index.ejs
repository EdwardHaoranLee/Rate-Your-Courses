                  <option>past year</option>
                  <option>past 3 years</option>
                </select>
              </div> -->
              <div class="col-auto  my-2 ">
                <button type="submit" class="btn button-primary" >&nbsp &nbsp Search &nbsp &nbsp</button>
              </div>
              <div class="col-auto my-2">
                <a href="/courses" class="btn button-primary" > or view all courses</a>
              </div>


            </div>
          </form>

          <% if(err){ %>
            <div class="alert alert-warning" role="alert">
              <%= err%>
            </div>
          <%}%>
        </div>
      </div>           
