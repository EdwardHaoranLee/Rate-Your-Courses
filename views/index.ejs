              </div>
              <div class="col-auto my-2">
                <a href="/courses" class="btn button-primary" > or view all courses</a>
              </div>


            </div>
          </form>

          <% if(err){ %>
            <div class="alert alert-warning" role="alert">
              <%= err%>
            </div>
          <%}%>
